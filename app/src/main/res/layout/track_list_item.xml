<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:paddingTop="2dip"
  android:paddingBottom="2dip"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:minHeight="?android:attr/listPreferredItemHeight"
  android:orientation="vertical">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/trackdetails_item_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="4dip"
      android:paddingRight="2dip"
      android:paddingTop="5dip"
      android:src="@drawable/trackdetails_item_icon"/>
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
   	 <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      <TextView android:id="@+id/trackdetails_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:singleLine="true"
        android:text="Track name"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
      <TextView android:id="@+id/trackdetails_item_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:singleLine = "true"
        android:text="Activity type"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>
    <TextView android:id="@+id/trackdetails_item_time"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dip"
    android:singleLine="true"
    android:textColor="#fff"
    android:text="Start time"
    android:textAppearance="?android:attr/textAppearanceSmall"/>
  <TextView android:id="@+id/trackdetails_item_stats"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dip"
    android:singleLine="true"
    android:textColor="#0f0"
    android:text="Distance and total time"
    android:textAppearance="?android:attr/textAppearanceSmall"/>
  <TextView android:id="@+id/trackdetails_item_description"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft = "6dip"
    android:singleLine = "false"
    android:text="Description"
    android:textAppearance="?android:attr/textAppearanceSmall"/>
  </LinearLayout>
  </LinearLayout>
</LinearLayout>
